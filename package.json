{
  "name": "@eegli/tinyparse",
  "description": "A tiny utility for parsing & validating Node CLI args and object literals",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cli",
    "node",
    "parse",
    "argv",
    "validate",
    "argument",
    "utility",
    "typescript"
  ],
  "homepage": "https://github.com/eegli/tinyparse",
  "author": {
    "name": "Eric Egli",
    "email": "lx180777+npm@gmail.com"
  },
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eegli/tinyparse.git"
  },
  "version": "0.2.0",
  "type": "commonjs",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "readme.md"
  ],
  "scripts": {
    "install:ci": "yarn install --ignore-optional --frozen-lockfile",
    "dev": "tsc --watch",
    "build": "tsc --build",
    "prebuild": "rm -rf dist",
    "lint": "eslint src test --ext .ts",
    "format": "prettier --write src test",
    "prepublish": "yarn build",
    "test": "jest --verbose",
    "test:watch": "jest  --verbose --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.4",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "{src,test}/*.ts": [
      "eslint --cache",
      "prettier --write"
    ]
  }
}
