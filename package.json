{
  "name": "@eegli/tinyparse",
  "version": "0.5.1",
  "description": "A tiny utility for parsing & validating Node CLI args and object literals",
  "keywords": [
    "cli",
    "node",
    "parse",
    "argv",
    "validate",
    "argument",
    "utility",
    "typescript"
  ],
  "homepage": "https://github.com/eegli/tinyparse",
  "repository": {
    "type": "git",
    "url": "https://github.com/eegli/tinyparse.git"
  },
  "license": "MIT",
  "author": {
    "name": "Eric Egli",
    "email": "lx180777+tinyparse@gmail.com"
  },
  "type": "commonjs",
  "main": "dist/eegli-tinyparse.cjs.js",
  "module": "dist/eegli-tinyparse.esm.js",
  "files": [
    "dist",
    "LICENSE",
    "readme.md"
  ],
  "scripts": {
    "build": "preconstruct build",
    "build:release": "yarn build && rm -rf _release && yarn pack && mkdir _release && tar zxvf package.tgz --directory _release && rm package.tgz",
    "format": "prettier --write src test",
    "postinstall": "husky install",
    "lint": "eslint src test --ext .ts",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepublish": "preconstruct build",
    "test": "jest --verbose",
    "test:all": "yarn test && yarn test:integration",
    "test:integration": "yarn build &&  cd test/integration && npm install -S ../../ && node --test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest  --verbose --watch"
  },
  "lint-staged": {
    "{src,test}/*.ts": [
      "eslint --cache",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@preconstruct/cli": "^2.1.7",
    "@types/jest": "^27.4.0",
    "@types/node": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-jest": "^26.1.1",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "pinst": "^3.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "np": {
    "yarn": false,
    "branch": "main",
    "testScript": "yarn test:all"
  }
}
